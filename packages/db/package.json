{
  "name": "@repo/db",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./postgres": {
      "types": "./src/postgres/database.ts",
      "default": "./dist/postgres/database.js"
    },
    "./redis": {
      "types": "./src/redis/index.ts",
      "default": "./dist/redis/index.js"
    },
    "./health": {
      "types": "./src/health/index.ts",
      "default": "./dist/health/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:setup": "bun db:migrate && bun db:seed"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/redis": "^4.0.11",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "redis": "^5.7.0"
  }
}
