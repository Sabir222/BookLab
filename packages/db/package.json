{
  "name": "@repo/db",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./types": {
      "types": "./src/types.ts",
      "default": "./dist/types.js"
    },
    "./users": {
      "types": "./src/queries/users.ts",
      "default": "./dist/queries/users.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:setup": "bun db:migrate && bun db:seed"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
