# ====================
# Server Configuration
# ====================
PORT=4000
PORT_DB=5432
DB_PW= # Your PostgreSQL database password
CORS_ORIGIN=http://localhost:3000,http://localhost:4000
NODE_ENV=development
HOST=localhost
