# BookLab Server Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development

# Comma-separated list of allowed origins for CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection URL (preferred method)
DATABASE_URL=postgresql://booklab_user:password@localhost:5432/booklab_db

# Alternative: Individual PostgreSQL connection parameters
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=booklab_db
POSTGRES_USER=booklab_user
POSTGRES_PASSWORD=password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis connection URL (preferred method)
REDIS_URL=redis://localhost:6379

# Alternative: Individual Redis connection parameters
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Session secret - MUST be at least 32 characters long
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-at-least-32-characters-long

# JWT secrets - use different secrets for access and refresh tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-jwt-access-secret-64-characters-long
JWT_REFRESH_SECRET=your-jwt-refresh-secret-64-characters-long

# Token expiration times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================
# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL in seconds
CACHE_TTL=60

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Set to true to enable debug mode
DEBUG=false

# Set to true to enable SQL query logging
LOG_SQL_QUERIES=false
