JWT_REFRESH_EXPIRES_IN=30d

# =================
# Cookie Settings
# =================
ACCESS_TOKEN_COOKIE_NAME=booklab_access_token
REFRESH_TOKEN_COOKIE_NAME=booklab_refresh_token
ACCESS_TOKEN_COOKIE_MAX_AGE=2592000000   # 30 days in milliseconds
REFRESH_TOKEN_COOKIE_MAX_AGE=1800000     # 30 minutes in milliseconds
